    "test": "npm run tests:build; npm run tests:exec",
    "tests:build": "vite build --config vite.config.tests.js --mode development",
    "tests:watch": "vite build --config vite.config.tests.js --mode watch",
    "tests:exec": "c8 ava dist/lib.es.tests.js",
    "dev:build:lib": "vite build --config vite.config.lib.js --mode development",
    "dev:build": "npm run dev:build:lib",
    "dev:watch": "vite build --config vite.config.lib.js --mode watch",
    "release:build:lib": "vite build --config vite.config.lib.js --mode production",
    "release:build": "npm run release:build:lib",
    "package:build": "npm run release:build",
    "package:publish": "npm publish --access public"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
