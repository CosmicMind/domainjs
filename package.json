{
  "name": "@cosmicmind/domainjs",
  "version": "0.0.1-rc-030223-4",
  "description": "A framework for building applications with Domain-driven design in TypeScript.",
  "keywords": [],
  "author": {
    "name": "Daniel Jonathan",
    "email": "daniel@cosmicverse.org"
  },
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/cosmicmind/domainjs.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/lib-cjs.js",
  "module": "./dist/lib-es.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib-es.js",
      "require": "./dist/lib-cjs.cjs"
    }
  },
  "files": [
    "dist",
    "typings",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint --fix --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "build": "run-s build:lib",
    "build:lib": "vite build --config vite.config.lib.ts --mode ${VITE_MODE:-production}",
    "dev": "run-s dev:lib",
    "dev:lib": "vite build --config vite.config.lib.ts --mode ${VITE_MODE:-development}",
    "watch": "run-p watch:lib",
    "watch:lib": "vite build --watch --config vite.config.lib.ts --mode ${VITE_MODE:-watch}",
    "test": "run-s test:unit",
    "test:unit": "vitest run --config vite.config.test.ts --mode ${VITE_MODE:-test}",
    "test:coverage": "vitest run --coverage --config vite.config.test.ts --mode ${VITE_MODE:-benchmark}"
  },
  "dependencies": {
    "@cosmicmind/foundationjs": "^0.0.1-rc-030223-1",
    "@cosmicmind/patternjs": "^0.0.1-rc-030223-3"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@types/node": "^18.7.15",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.23.4",
    "@vue/compiler-sfc": "^3.2.38",
    "@vue/eslint-config-typescript": "^11.0.0",
    "eslint": "^8.24.0",
    "eslint-plugin-yml": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "vite": "^4.1.4",
    "vite-plugin-dts": "^1.4.1",
    "vitest": "^0.23.0",
    "yup": "^0.32.11"
  }
}
